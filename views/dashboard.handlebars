{{!-- dashboard page layout --}}
    <form class="new-post-form">
      <label for="post-title">Post Title:</label>
      <input name="post-title" type="text" value="{{post.title}}" />

      <label for="post-content">Post Content:</label>
      <input class="form-input" name="post-content" type="text" value="{{post.content}}">

      <button class="btn" type="submit">Create Post</button>
      <button class="btn" type="button" class="delete-post-btn">Delete Post</button>
    </form>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>

        {{#each posts as |post|}}
        <div class="card">
        <div class="card-header">
        <h3>
            <a href="/post/{{id}}">{{post.title}}</a>
        </h3>
        <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
        <p class="card-body">{{content}}</p>
        </div>
        {{/each}}
    
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
{{!-- single post page layout --}}

  {{#each posts as |post|}}
    <div class="card">
      <div class="card-header flex-row justify-space-between">
        <h2>
          <a href="/post/{{id}}">{{post.title}}</a>
        </h2>
        <p>Posted by {{user.username}} on {{format_date created_at}}</p>
      </div>
      <p class="card-body">{{content}}</p>
    </div>


    <div class="card">
      {{#each post.comments}}
        <section class="card-body">
          <div class="meta">
            {{user.username}}
            on
            {{format_date created_at}}
          </div>
          <div class="text">
            {{comment_text}}
          </div>
        </section>
      {{/each}}
    </div>

  {{/each}}




{{#if loggedIn}}
  <form id="addComment">
    <div>
      <textarea class="form-input" name="comment-body"></textarea>
    </div>

    <div>
      <button class="btn" type="submit">Add Comment</button>
    </div>
  </form>
{{/if}}

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}
{{!-- // homepage layout --}}
    {{#each posts as |post|}}
    <div class="card">
        <div class="card-header flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
        <p class="card-body">{{content}}</p>
    </div>
    {{/each}}

